{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "Src/*":["./app/render/*"],
            "Components/*":["./app/render/components"],
            "Common/*":["./app/render/common"],
            "Store/*":["./app/render/store"],
            "Utils/*":["./app/render/common/utils"],
        },
        "moduleResolution": "node",
    },
    "exclude": ["dist","node_modules"],
    "include": ["app/**/*.ts","app/**/*.tsx","app/**/*.d.ts"]
}